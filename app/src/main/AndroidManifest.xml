<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.izv.pgc.laliga">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".EquiposActivity"></activity>
        <activity
            android:name=".activities.AddJugador"
            android:parentActivityName=".JugadoresActivity" />
        <activity
            android:name=".activities.AddEquipo"
            android:parentActivityName=".EquiposActivity" />
        <activity
            android:name=".activities.EditJugador"
            android:parentActivityName=".JugadoresActivity" />
        <activity
            android:name=".JugadoresActivity"
            android:label="@string/title_activity_plantilla"
            android:parentActivityName=".EquiposActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.EditEquipo"
            android:parentActivityName=".EquiposActivity" />
        <activity
            android:name=".EquiposActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>